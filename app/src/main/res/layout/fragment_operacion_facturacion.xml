<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".OperacionFacturacionFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin = "20sp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FACTURACIÓN"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="ID Cliente:"
        android:textSize="16sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/inputdato"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/border"
        android:hint="Ingresar ID Cliente"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:textColorHint="#3C4048"
        android:drawablePadding="12sp"
        android:textSize="15sp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="N° RUC:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputplaca"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/border"
        android:hint="Ingresar N° RUC"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:textColorHint="#3C4048"
        android:drawablePadding="12sp"
        android:textSize="15sp"
        android:textColor="@color/black" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="N° Tarjeta:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputkilometro"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/border"
        android:hint="Ingresar N° Tarjeta"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:textColorHint="#3C4048"
        android:drawablePadding="12sp"
        android:textSize="15sp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Razon Social"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputrazonsocial"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/border"
        android:hint="Ingresar Razon Social"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:textColorHint="#3C4048"
        android:drawablePadding="12sp"
        android:textSize="15sp"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Razon Social"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inpudireccion"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/border"
        android:hint="Ingresar Dirección"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:textColorHint="#3C4048"
        android:drawablePadding="12sp"
        android:textSize="15sp"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Razon Social"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputobservacion"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/border"
        android:hint="Ingresar Observación"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:textColorHint="#3C4048"
        android:drawablePadding="12sp"
        android:textSize="15sp"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/btntipopago"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="end"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Tipo de pago"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <Button
        android:id="@+id/dialogDismiss_button"
        android:layout_width="180sp"
        android:layout_height="50sp"
        android:layout_gravity="end"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Aceptar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>

</RelativeLayout>