<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "20sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GALONES"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Galones:"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/inputdato"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:hint="Ingresar Galones"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColorHint="#3C4048"
            android:drawablePadding="12sp"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="N° Placa:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputplaca"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:hint="Ingresar N° Placa"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColorHint="#3C4048"
            android:drawablePadding="12sp"
            android:textSize="15sp"
            android:textColor="@color/black" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Kilometraje:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputkilometro"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:hint="Ingresar Kilometraje"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColorHint="#3C4048"
            android:drawablePadding="12sp"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/dialogDismiss_button"
            android:layout_width="180sp"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>