<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilusuarioFragment">

    <TextView
        android:id="@+id/input_empresa"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/border"
        android:backgroundTint="#D9D9D9"
        android:inputType="text"
        android:padding="15sp"
        android:text="Estacion de Servicios Valle Hermoso E.I.RL"
        android:textColor="#515267"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_empresa" />

    <TextView
        android:id="@+id/input_acceso"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/border"
        android:backgroundTint="#D9D9D9"
        android:inputType="text"
        android:padding="15sp"
        android:text="Estacion de Servicios Valle HE(Nivel Soporte)"
        android:textColor="#515267"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_acceso" />

    <TextView
        android:id="@+id/datos_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:letterSpacing="0.1"
        android:text="DATOS DEL USUARIO"
        android:textColor="#051E78"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/input_ususario"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/border"
        android:backgroundTint="#D9D9D9"
        android:padding="18sp"
        android:paddingLeft="20sp"
        android:text="Miguel Ignacion Lazo"
        android:textColor="#515267"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_usuario" />

    <TextView
        android:id="@+id/acceso_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:letterSpacing="0.1"
        android:text="ACCESO POR USUARIO"
        android:textColor="#051E78"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_descuento" />

    <TextView
        android:id="@+id/input_contraseña"
        android:layout_width="350sp"
        android:layout_height="45sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/border"
        android:backgroundTint="#D9D9D9"
        android:drawablePadding="12sp"
        android:inputType="textPassword"
        android:padding="15sp"
        android:text="contraseña123$"
        android:textColor="#515267"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_contraseña" />

    <TextView
        android:id="@+id/text_acceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Acceso:"
        android:textColor="#06338B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_empresa" />

    <TextView
        android:id="@+id/text_contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="Contraseña:"
        android:textColor="#06338B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_ususario" />

    <TextView
        android:id="@+id/text_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="Empresa:"
        android:textColor="#06338B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acceso_usuario" />

    <TextView
        android:id="@+id/text_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="Nombres:"
        android:textColor="#06338B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_codigo" />

    <TextView
        android:id="@+id/input_codigo"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/border"
        android:backgroundTint="#D9D9D9"
        android:padding="18sp"
        android:text="1114687549"
        android:textColor="#515267"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_codigo" />

    <TextView
        android:id="@+id/text_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="Código:"
        android:textColor="#06338B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datos_user" />

    <CheckBox
        android:id="@+id/check_descuento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15sp"
        android:checked="true"
        android:textColor="#515267"
        android:textSize="12sp"
        android:text="Descuento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_contraseña" />

    <CheckBox
        android:id="@+id/check_anular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15sp"
        android:checked="true"
        android:textColor="#515267"
        android:textSize="12sp"
        android:text="Anular"
        app:layout_constraintStart_toEndOf="@+id/check_descuento"
        app:layout_constraintTop_toBottomOf="@+id/input_contraseña" />

    <CheckBox
        android:id="@+id/check_borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:checked="true"
        android:textColor="#515267"
        android:textSize="12sp"
        android:text="Borrar Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toEndOf="@+id/check_anular"
        app:layout_constraintTop_toBottomOf="@+id/input_contraseña" />



</androidx.constraintlayout.widget.ConstraintLayout>