<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grifo"
    android:padding="10sp"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380sp"
        android:background="@drawable/contenedor_login"
        app:elevation="550sp"
        android:orientation="vertical"
        android:padding="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475">

        <ImageView
            android:id="@+id/logoGrifo"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            app:srcCompat="@drawable/robles_sinfondo" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Iniciar Sesión"
            android:letterSpacing="0.08"
            android:textAlignment="center"
            android:textColor="#0D209A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_baseline_person_pin_24"
            android:hint="Ingresar Usuario"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:textColorHint="#3C4048"
            android:drawablePadding="12sp"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:hint="Ingresar Contraseña"
            android:textColorHint="#3C4048"
            android:drawablePadding="12sp"
            android:inputType="textPassword"
            android:paddingLeft="20sp"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btningresar"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_marginTop="10sp"
            android:text="Ingresar"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:cornerRadius="20sp"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>